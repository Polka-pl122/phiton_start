x = 0
y = 0

def setup():
    global x,y
    size(600,600)
    stroke(255,255,255)
    background(0,43,126)
    
def draw():
    global x,y
    x = random(0,600)
    y = random(0,600)
    fill(random (0,255))
    strokeWeight(random(1,5))
    
    if (mousePressed == True):
        x = random(0,600)
        y = random(0,600)
        point(x,y)
    if (mouseButton == False):
        background(0,43,126)
