angle = 0
x = 0
y = 0
x1 = 0
y1 = 0
def setup():
    global angle,x,y,x1,y1
    size(600,400)
    strokeWeight(10)
def draw():
    global angle,x,y,x1,y1
    stroke(random(0,255),random(0,255),random(0,255))
    translate(300,200)
    rotate(radians(angle))
    x = 0
    y = 0
    x1 = 200
    y1 = 0
    line(x,y,x1,y1)
    angle = angle + 1
