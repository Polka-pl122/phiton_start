x = 0
y = 0
lever = 0
lever1 = 0
mode1 = 0
mode = 0
def setup():
    global x,y, lever, lever1
    size(600,600)
    lever = 0
    lever1 = 0
    frameRate(1000)
    x = 0
    y = 0



def draw():
    global x,y,lever,lever1,mode1
    background(160)
    translate(mouseX,mouseY)
    ellipse(x,y,50,50)
    
def mouseClicked():
    global mode1
    if (mouseButton == RIGHT):
        noLoop()
    if (mouseButton == LEFT):
        loop()
